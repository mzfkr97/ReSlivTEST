<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding8dp</item>
        <item name="contentPadding">@dimen/contentPadding4dp</item>
        <item name="cardCornerRadius">4dp</item>

    </style>
    <style name="myCardViewStyle.noContentPadding" >
        <item name="contentPadding">0dp</item>
    </style>

    <style name="textMainTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
</resources>